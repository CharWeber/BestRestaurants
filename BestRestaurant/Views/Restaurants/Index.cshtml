@using BestRestaurant.Models
@model List<BestRestaurant.Models.Restaurant>;

<h1>Restaurant List</h1>

@if (Model.Count == 0)
{
  <h3>You haven't added any restauurants yet</h3>
}

@foreach(Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new {id = restaurant.RestaurantId }) |  cuisine name here</li>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>