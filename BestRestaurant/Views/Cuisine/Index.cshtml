@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Cuisine>;

  <h1>Cuisine Style</h1>

  @if (Model.Count ==0)
  {
    <h3>add cuisine styles below!</h3>
  }

  @foreach(Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.Name}", "Details", new {id = cuisine.CuisineId })</li>
  }

  <p>@Html.ActionLink("Home", "Index", "Home")</p>
  <p>@Html.ActionLink("Create Cuisine Style", "Create")</p>
  <p>@Html.ActionLink("Add a restaurant", "Create", "Restaurants")</p>
